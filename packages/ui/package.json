{
  "name": "@illog/ui",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./index.css": "./dist/index.css"
  },
  "scripts": {
    "build": "pnpm run build:tsc && pnpm run build:esbuild",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:esbuild": "pnpm run build:color && pnpm run build:icons && tsx build.ts",
    "build:watch": "pnpm run build:color && pnpm run build:icons && concurrently -n \"TSC,COLOR,ICONS,ESBUILD\" -c \"blue,green,yellow,cyan\" \"tsc -p tsconfig.build.json --watch --preserveWatchOutput\" \"chokidar 'src/core/tokens/**/*.ts' -c 'pnpm run build:color'\" \"chokidar 'src/assets/svg/**/*.svg' -c 'pnpm run build:icons'\" \"NODE_ENV=development tsx build.ts --watch\"",
    "build:dev": "pnpm run build:tsc && NODE_ENV=development pnpm run build:esbuild",
    "build:prod": "pnpm run build:tsc && NODE_ENV=production pnpm run build:esbuild",
    "build:icons": "tsx ./scripts/generate-icons.ts",
    "build:color": "tsx ./scripts/generate-color-objects.ts",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.3",
  "dependencies": {
    "@illog/esbuild-config": "workspace:*",
    "@illog/themes": "workspace:*",
    "@vanilla-extract/dynamic": "^2.1.5",
    "@vanilla-extract/recipes": "^0.5.7",
    "@vanilla-extract/sprinkles": "^1.6.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vanilla-extract/css": "^1.17.5",
    "@vanilla-extract/esbuild-plugin": "^2.3.19",
    "@vanilla-extract/vite-plugin": "^5.1.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "4.0.18",
    "chokidar-cli": "^3.0.0",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "esbuild-plugin-svgr": "^3.1.1",
    "jsdom": "^27.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.10.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^4.0.14"
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.10.1"
  }
}
